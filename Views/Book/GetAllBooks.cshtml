@model IEnumerable<BookModel>;
@{
    ViewData["Title"] = "All books";
}
<div class="container mb-5 mt-5">
    @if(@Model != null && @Model.Any())
    {
        <h3 class="display-4">All books</h3>
        <div class="row">
            @foreach (var book in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        <img src="@book.CoverImageUrl" alt="@book.CoverImageUrl" class="img-thumbnail"/>
                        <div class="card-body">
                            <h3 class="card-title">@book.Title</h3>
                            <p class="card-text">@book.Description...</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <a asp-controller="book" asp-action="getbook" asp-route-id="@book.Id" class="btn btn-outline-secondary">View Details</a>
                                <small class="text-muted">@book.Author</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else{
        <h5 class="display-4">No books available.</h5>
    }
</div>